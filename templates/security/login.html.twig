{% extends 'base.html.twig' %}
{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="container mx-auto p-2 rounded">
			<h3 class="text-center">Iniciar Sesión</h3>
		</div>
		<div class="card mx-auto" style="width: 38rem;">

			<div class="card-body">

				<h6 class="card-subtitle mb-2 text-body-secondary" for="inputEmail">Correo Electronico</h6>
				<p class="card-text">
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</p>

				<h6 class="card-subtitle mb-2 text-body-secondary" for="inputPassword">Contaseña</h6>
				<p class="card-text">
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</p>
				<p class="card-text">
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me">
							Recuerdame
						</label>
					</div>
				</p>

				<button type="submit" class="btn btn-primary">Iniciar Sesión</button>

				<button type="button" class="btn btn-success">
					<a class="nav-link" href="{{path('app_register')}}">Registrarse</a>
				</button>
			</div>
		</div>


		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

	</form>
{% endblock %}
