<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}iRevive
			{% endblock %}
		</title>
		<style>
			.btn-custom {
				background-color: #ffc107; /* Cambiar el color de fondo a amarillo */
				color: #ffffff; /* Cambiar el color del texto a blanco */
				padding: 0.5rem 1rem; /* Ajustar el relleno (padding) para hacerlo un poco más grande */
				border-radius: 0.25rem; /* Agregar bordes redondeados */
			}
		</style>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>
		{% block header %}
			<header class="bg-light">
				<nav class="navbar navbar-expand-md navbar-light bg-light">
					<a class="navbar-brand mx-4" href="{{path('app_index')}}">iRevive</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item active">
								<a class="nav-link" href="{{path('app_index')}}">Inicio</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_contacto')}}">Contacto</a>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_reparaciones_index')}}">Mis pedidos</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_logout')}}">Desconectarse</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link" href="{{path('app_piezas_iphone_index')}}">Administrar Piezas</a>
									</li>
								{% endif %}
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_login')}}">Iniciar Sesión</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</nav>
			</header>
		{% endblock %}


		{% block body %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	</body>
</html>
